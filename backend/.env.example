# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key

# Mock Mode Configuration
# Set to 'true' to enable mock services for development/testing
# When enabled, external API calls are simulated and logged to Supabase
MOCK_MODE=false

# External Services API Keys
# These are NOT required when MOCK_MODE=true
SENDGRID_API_KEY=your_sendgrid_key
AISENSY_API_KEY=your_aisensy_key
BOLNA_API_KEY=your_bolna_key
INSTAMOJO_API_KEY=your_instamojo_key
INSTAMOJO_AUTH_TOKEN=your_instamojo_auth_token
